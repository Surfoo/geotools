#!/usr/bin/env php
<?php

/*
 * This file is part of the Geotools library.
 *
 * (c) Antoine Corcy <contact@sbin.dk>
 *
 * For the full copyright and license information, please view the LICENSE
 * file that was distributed with this source code.
 */


if (!extension_loaded('curl') || !function_exists('curl_init')) {
    die(<<<EOT
cURL has to be enabled!
EOT
    );
}

require dirname(__DIR__).'/vendor/autoload.php';

use League\Geotools\CLI\Application as GeotoolsApplication;
use League\Geotools\CLI\Command\Convert;
use League\Geotools\CLI\Command\Distance;
use League\Geotools\CLI\Command\Geocoder;
use League\Geotools\CLI\Command\Geohash;
use League\Geotools\CLI\Command\Vertex;

$application = new GeotoolsApplication();
$application->setName('Geotools :: Geo-related tools PHP 7.3+ library');

$application->add(new Convert\DM);
$application->add(new Convert\DMS);
$application->add(new Convert\UTM);
$application->add(new Distance\All);
$application->add(new Distance\Flat);
$application->add(new Distance\GreatCircle);
$application->add(new Distance\Haversine);
$application->add(new Distance\Vincenty);
$application->add(new Geocoder\Geocode);
$application->add(new Geocoder\Reverse);
$application->add(new Geohash\Decode);
$application->add(new Geohash\Encode);
$application->add(new Vertex\Destination);
$application->add(new Vertex\FinalBearing);
$application->add(new Vertex\FinalCardinal);
$application->add(new Vertex\InitialBearing);
$application->add(new Vertex\InitialCardinal);
$application->add(new Vertex\Middle);
$application->run();
